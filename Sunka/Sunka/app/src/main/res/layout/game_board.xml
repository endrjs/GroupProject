<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgame">

    <Button
        android:id="@+id/menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:onClick="menuSetting"
        android:background="@drawable/menubutton" />


    <TextView
        android:id="@+id/setPlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Player 1"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColorHint="#FF3599DB"
        android:textColor="#FF3599DB"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/setPlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Player 2"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColorHint="#4ccd97"
        android:textColor="#4ccd97"

        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"/>

    <include
        android:id="@+id/game_layout" layout="@layout/game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
    </include>

    <TextView
        android:id="@+id/store1text"
        android:textSize ="10dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/game_layout"
        android:layout_alignLeft="@+id/game_layout"
        android:text="STORE"
        android:textColor="#FFFF"/>


    <TextView
        android:id="@+id/store2text"
        android:textSize ="10dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/game_layout"
        android:layout_below="@+id/game_layout"
        android:text="STORE"
        android:textColor="#FFFF"/>


    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/pass"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:text="PASS"
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="#FFFF"
        android:background="#205a74" />

    <TextView
        android:id="@+id/timer_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="00:00:00"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/playersTurn"
        android:text=""
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:textSize="100dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/player1_accumulated_moves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXTRA MOVES"
        android:textStyle="bold"
        android:textSize="12dp"
        android:textColor="#FFFF"
        android:layout_marginLeft="10dp"
        android:layout_above="@+id/player1_extratruns"
        android:layout_alignParentLeft="true"
        />

    <Button
        android:id="@+id/player1_extratruns"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:textSize="20dp"
        android:text="0"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:background="#FF3599DB" />



    <TextView
        android:id="@+id/player2_accumulated_moves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXTRA MOVES"
        android:textStyle="bold"
        android:textSize="12dp"
        android:textColor="#FFFF"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/player2_extraturns"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/player2_extraturns"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/player2_accumulated_moves"
        android:text="0"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:background="#4ccd97" />


    <TextView
        android:id="@+id/testing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="50dp"
        android:text="Hi"
        android:layout_centerInParent="true"
        android:textColor="#FFFF"/>















</RelativeLayout>