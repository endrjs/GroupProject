<!--
    This XML file contains the interface for player2. All the methods are implemented in
    Player2.java class.

    This page is pretty much complete. Please try and avoid changing any of the code.

    @author Damien Powell, Ka Chu, Gun Park, Maahnoor Khan & Zainab Khatun.
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/backgroundforall">

    <TextView
        android:id="@+id/playertwo"
        android:layout_width="226dp"
        android:layout_height="65dp"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/playertwo" />

    <TextView
        android:id="@+id/entername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER NAME"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/playertwo"
        android:layout_below="@+id/playertwo"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/inputPlayer2"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:hint="eg., Uncle Cid "
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColorHint="#3599db"
        android:textColor="#3599db"
        android:paddingLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/entername"
        android:background="@drawable/inputboxblue"/>


    <Button
        android:id="@+id/startGame"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:onClick="startGame"
        android:layout_centerInParent="true"
        android:layout_below="@+id/backButton"
        android:background="@drawable/letsplay" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/inputPlayer2"
        android:layout_centerInParent="true"
        android:onClick="goBack"
        android:background="@drawable/goback" />
</RelativeLayout>